extends  ../layout.pug

block content
  h1 注册账号
  form(method="post", action="/user/register")
    .form-group
      label 用户名: 
      input.form-control(name="username", type="text", value=formData.username)
    .form-group
      label 邮箱: 
      input.form-control(name="email", type="text", value=formData.email)
    .form-group
      label 密码: 
      input.form-control(name="password", type="password", value=formData.password)
    .form-group
      label 确认密码: 
      input.form-control(name="passwordConfirmation", type="password", value=formData.passwordConfirmation)
    input.btn.btn-primary(type="submit", value="注册")
